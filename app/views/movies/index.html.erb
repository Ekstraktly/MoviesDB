<div class="container">
<h2>Movies list</h2>
  <%= form_tag(movies_path, method: :get) do %>
    <%= text_field_tag :term, params[:term] %>
    <%= submit_tag 'Search', name: nil %>
  <% end %>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th></th>
  </tr>

  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.id %></td>
      <td><%= movie.title %></td>
      <td><button type="button" class="btn btn"><%= link_to 'Show', movie_path(movie) %></button></td>
    </tr>
  <% end %>
</table>
</div>
