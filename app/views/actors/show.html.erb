<div class="container">
  <h2><%= @actor.name %></h2>
  <table>
    <tr>
      <th>Movie</th>
      <th>Character</th>
      <th></th>
    </tr>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.movie.title %></td>
        <td><%= role.name %></td>
        <td><%= link_to 'Show', movie_path(role.movie) %></td>
      </tr>
    <% end %>
  </table>
  <div class="row">
    <span class="glyphicon glyphicon-circle-arrow-left"></span>
    <h5><%= link_to 'Back to actors list',
                    actors_list_path %></h5>
  </div>