<div class="container">
<h2>Genres list</h2>
  <%= form_tag(genres_path, method: :get) do %>
    <%= text_field_tag :term, params[:term] %>
    <%= submit_tag 'Search', name: nil %>
  <% end %>
<table>
  <tr>
    <th>ID </th>
    <th>Name</th>
    <th></th>
  </tr>

  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.id %> </td>
      <td><h2><%= genre.name %></h2></td>
      <% genre.movies.each do |movie| %>
      <tr>
        <td><%= movie.id %></td>
        <td><%= link_to movie.title, movie_path(movie) %></td>
        <td><%= image_tag movie.avatar.variant(resize: '100x100'),
                      class: "img-fluid" %></td>
      </tr>
    <% end %>
    </tr>
  <% end %>
</table>
</div>

