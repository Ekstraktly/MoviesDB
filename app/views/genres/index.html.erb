<div class="container">
<h2>Genres list</h2>
  <%= form_tag(genres_path, method: :get) do %>
    <%= text_field_tag :term, params[:term] %>
    <%= submit_tag 'Search', name: nil %>
  <% end %>
<table>
  <tr>
    <th>ID </th>
    <th>Name</th>
    <th></th>
  </tr>

  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.id %> </td>
      <td><%= genre.name %></td>
      <td><%= link_to 'Show', genre_path(genre) %></td>
    </tr>
  <% end %>
</table>
</div>

